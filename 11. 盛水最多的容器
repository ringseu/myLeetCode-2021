class Solution {
public:
    int maxArea(vector<int>& height) {
        if (height.size() < 2)
        {
            return 0;
        }

        int result = 0, left = 0, right = height.size()-1;
        while (left < right)
        {
            int min = (height[left] < height[right]) ? height[left] : height[right];
            int tmp = min * (right - left);
            if (tmp > result)
            {
                result = tmp;
            }

            if (height[left] < height[right])
            {
                ++left;
            }
            else
            {
                --right;
            }
        }

        return result;
    }
};
