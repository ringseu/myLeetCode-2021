class Solution {
public:
    vector<vector<int>> generate(int numRows) {
        vector<vector<int>> result;

        int i = 1;
        while (i <= numRows)
        {
            if (i == 1)
            {
                result.push_back({1});
            }
            else if (i == 2)
            {
                result.push_back({1, 1});
            }
            else
            {
                vector<int> tmp;
                tmp.push_back(1);

                vector<int> &prev = result[i-2];    //上一行

                for (int j = 0; j < prev.size()-1; ++j)
                {
                    tmp.push_back(prev[j] + prev[j+1]);
                }
                tmp.push_back(1);
                result.push_back(tmp);
            }
            ++i;
        }

        return result;
    }
};
