class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        if (nums.size() == 0)
        {
            return 0;
        }

        int max = nums[0];
        int i = 0, tmp = 0;
        while (i < nums.size())
        {
            tmp += nums[i];

            if (tmp > max)
            {
                max = tmp;
            }

            if (tmp < 0)
            {
                ++i;
                tmp = 0;
                continue;
            }

            ++i;
        }

        return max;
    }
};
