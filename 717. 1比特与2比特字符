class Solution {
public:
    bool isOneBitCharacter(vector<int>& bits) {
        if (bits.size() <= 1)
        {
            return true;
        }

        int i = 0;
        while (i < bits.size()-1)
        {
            if (bits[i] == 0)
            {
                i += 1;
            }
            else
            {
                i += 2;
            }
        }

        return (bits.size() - i == 1);
    }
};
