class Solution {
public:
    vector<int> twoSum(vector<int>& numbers, int target) {
        vector<int> result;
        
        int left = 0, right = numbers.size()-1;

        while (left < right)
        {
            int tmp = numbers[left] + numbers[right];
            if (tmp == target)
            {
                result.push_back(left+1);
                result.push_back(right+1);
                break;
            }
            else if (tmp > target)
            {
                --right;
            }
            else
            {
                ++left;
            }
        }

        return result;
    }
};
